# VoicecastingPro Environment Configuration
# Copy this to Railway environment variables

# Server Configuration
NODE_ENV=production
PORT=3000

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# JWT Secret (Generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here-make-it-long-and-random

# PayPal Configuration (Get from developer.paypal.com)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_PRODUCT_ID=VOICECASTINGPRO_PRODUCT

# Email Configuration (Gmail setup)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-gmail-app-password
SUPPORT_EMAIL=support@yourdomain.com

# URLs (Railway will provide these automatically)
FRONTEND_URL=${{RAILWAY_STATIC_URL}}
BASE_URL=${{RAILWAY_STATIC_URL}}